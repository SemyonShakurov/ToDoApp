<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="11dp">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/check_box_is_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="19dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/priority_icon_descr"
        app:layout_constraintStart_toEndOf="@+id/check_box_is_done"
        app:layout_constraintTop_toTopOf="@+id/text_view_description" />

    <ImageView
        android:id="@+id/image_view_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:contentDescription="@string/icon_info_descr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/image_view_info"
        app:layout_constraintStart_toEndOf="@+id/image_view_priority"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="12dp"
        tools:text="Купить что-то Купить что-то Купить что-то Купить что-то Купить что-то Купить что-то Купить что-то" />

    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/tertiary_label"
        app:layout_constraintStart_toStartOf="@+id/text_view_description"
        app:layout_constraintTop_toBottomOf="@+id/text_view_description"
        tools:text="11.11.1111" />
</androidx.constraintlayout.widget.ConstraintLayout>